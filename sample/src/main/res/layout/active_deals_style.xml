<?xml version="1.0" encoding="utf-8"?>
   <android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activeDeals_cardView"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/project_color"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Name :"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/name_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/name"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"
                android:text="First"
                android:textColor="#000"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/iD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="26dp"
                android:text="    ID :"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/id_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iD"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:text="1"
                android:textColor="#000"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">
        <TextView
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="    Owner :"
            android:textColor="#000"/>

            <ImageView
                android:id="@+id/owner_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/owner"
                android:src="@drawable/ic_owner" />
            <TextView
                android:id="@+id/owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/owner_photo"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:text="Admin CIOC"
                android:textStyle="bold"
                android:textColor="#000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">
        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=" Contact :"
            android:textColor="#000"/>

            <ImageView
                android:id="@+id/contact_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/contact"
                android:src="@drawable/ic_owner" />
            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/contact_photo"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:text="Samuel D. Pollock "
                android:textStyle="bold"
                android:textColor="#000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:text=" Value :"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/value_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/value"
                android:src="@drawable/ic_money" />
            <TextView
                android:id="@+id/money_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/value_photo"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:text="5000/-"
                android:textColor="#000"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>